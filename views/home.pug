extends layout

block content
    nav.navbar.navbar-default.NOnavbar-fixed-top
        .container-fluid
            .navbar-header 
                a.NOnavbar-brand(href='#')
                    img#logo(
                        src='https://firebasestorage.googleapis.com/v0/b/drawingsound-1d381.appspot.com/o/logo_text.png?alt=media&token=a6de0c11-be8f-45c5-ae63-95a675b3dacf' 
                        alt='Talk Fusion')
            

    #wrapper
        #sidebar-wrapper
            ul.sidebar-nav
                li.sidebar-brand
                    a(href='/home')
                        | 음을 그리다
                li
                    a(href='/home') 그려진 악보
                li
                    a(href='/users/show') PROFILE
                li
                    a(href='/faq') FAQ
      
        #page-content-wrapper
            .container-fluid
                .input-group.mb-3
                    .input-group-prepend
                        select#search3.selectpicker
